<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".ChosenWorkout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_arrow_back_24"
            />

        <Spinner
            android:id="@+id/exercise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="6"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/repsChart"
            android:text="Reps"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/textview_frame_black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/weightChart"
            android:text="Weight"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/textview_frame_black"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/timeChart"
            android:text="Time"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:clickable="true"
            android:background="@drawable/textview_frame_black"
            android:focusable="true"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>



    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/graph"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/daysChart"
            android:text="Days"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/textview_frame_black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/monthsChart"
            android:text="Months"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/textview_frame_black"
            android:layout_height="match_parent"
            android:layout_weight="1"/>



        <TextView
            android:id="@+id/yearsChart"
            android:text="Years"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/textview_frame_black"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>

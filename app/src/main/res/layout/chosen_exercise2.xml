    </LinearLayout>


    <Button
        android:id="@+id/saveSetButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:text="Save set"
        android:textSize="25sp">

    </Button>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateExercise"
    android:weightSum="9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_arrow_back_24"
            />

        <TextView
            android:id="@+id/exercise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="New exercise"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </TextView>



    <EditText
        android:id="@+id/nameOfNewExercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Name of new exercise"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="30sp"
        android:gravity=""
        android:textColor="@color/black">

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </TextView>


    <Spinner
        android:id="@+id/bodyPartOfNewExercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </TextView>

    <Spinner
        android:id="@+id/difficultyOfNewExercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </TextView>

    <Button
        android:id="@+id/createExerciseButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:text="Create"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/updateExerciseButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/black"
        android:text="Update"
        android:textSize="30sp"
        android:visibility="gone">

    </Button>

</LinearLayout>

